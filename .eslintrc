{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "node": true,
        "jest": true,
        "es6": true
    },
    "plugins": ["react"],
    "rules": {
        "no-plusplus": 0,
        "no-underscore-dangle": 0,
        "no-mixed-operators": 0,
        "class-methods-use-this": 0,
        "arrow-parens": [1, "as-needed"],
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ]
    },
    "extends": ["airbnb-base", "plugin:react/recommended"],
    "settings": {
        "react": {
            "version": "16.5.2"
        },
        "import/resolver": {
            "webpack": {
                "config": "webpack.config.dev.js"
            }
        }
    }
}
