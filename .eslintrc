{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "jest": true,
    "es6": true
  },
  "plugins": ["react"],
  "rules": {
    "no-plusplus": 0,
    "no-underscore-dangle": 0,
    "no-mixed-operators": 0,
    "class-methods-use-this": 0
  },
  "extends": ["airbnb-base", "plugin:react/recommended"],
  "settings": {
    "import/resolver": {
      "react": {
        "version": "16.5.2"
      },
      "webpack": {
        "config": "webpack.config.dev.js"
      }
    }
  }
}
