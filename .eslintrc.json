{
  "env": {
    "browser": true,
    "node": true,
    "jest": true,
    "es6": true,
    "commonjs": true
  },
  "plugins": ["import", "react", "jsx-a11y", "react-hooks"],
  "rules": {
    "no-console": 0,
    "indent": [
      "error",
      4,
      {
        "SwitchCase": 1
      }
    ]
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:react/recommended",
    "plugin:jsx-a11y/recommended",
    "prettier"
  ],
  "settings": {
     "import/resolver": {
      "node": {
        "paths": ["src"]
      }
    },
    "react": {
      "version": "detect"
    }
  }
}
